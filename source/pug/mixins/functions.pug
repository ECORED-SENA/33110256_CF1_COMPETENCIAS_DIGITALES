mixin pageHeader(tituloTema, srcImagen, pagina)
    .curso-portada

        .row.align-items-center

            .col-12.col-lg-6

                .curso-container

                    h3#curso-titulo-componente.curso-subtitulo.text-color-orange DESARROLLO DE COMPETENCIAS DIGITALES EN EL TALENTO HUMANO EN SALUD
                    h1#curso-titulo-tema.curso-titulo Competencias digitales en el talento humano salud

                    .brand-line-primary

                    if pagina == 'main'

                        .keywords
                            span.badge.badge-pill.badge-brand-light.mr-2 #SaludDigital
                            span.badge.badge-pill.badge-brand-light.mr-2 #TIC
                            span.badge.badge-pill.badge-brand-light.mr-2 #CompetenciasDigitales
                            span.badge.badge-pill.badge-brand-light.mr-2 Sistema de información clínica


                        .barra-dots.mt-5
                            img.img-fluid(src='assets/images/header/icon_dots.svg', alt='alt')

                    else 
                        p.curso-descripcion Las Tecnologías de la Información y la Comunicación (TIC) están en constante evolución y cada vez más la salud digital se fortalece y se apoya de estas herramientas, convirtiéndose en un gran aliado al momento de la prestación del servicio, puesto que permite la integración de la información de una manera oportuna, confiable, eficiente y segura. 
                        p.curso-descripcion Esta evolución obliga a los profesionales del sector salud a desarrollar competencias digitales, que les permitan dar respuesta pertinente a las necesidades que surgen día a día en el entorno actual, sin desconocer el marco normativo del Sistema General de Seguridad Social en Salud (SGSSS) de Colombia y la reglamentación de habilitación que permitirá al talento humano en salud articular el funcionamiento del sistema de información clínica, mediado por todas las herramientas en las que hoy en día se apoya la salud digital.

            
                    if pagina == 'home'
                        a.curso-btn-iniciar.btn.btn-light(href="main.html")
                            span Iniciar curso


            .col-12.col-lg-6.text-center
                .d-none.d-lg-block
                    img(src= srcImagen).curso-imagen


mixin referenciaItem(referencia, enlace, tituloenlace="")
    p= referencia
        if tituloenlace != ""
            a(href= enlace, target="_blank").ml-2= tituloenlace
        else if enlace != ""
            a(href= enlace, target="_blank").ml-2= enlace
    hr



mixin navTemaItem(numero, titulo, ruta)
    li.list-group-item.nav-tema-item
        .row.align-items-center
            if numero == 'play'
                .col-auto
                    .avatar.avatar-sm
                        span.nav-tema-item__icon.avatar-title.font-size-lg.bg-secondary-soft.rounded-circle.text-primary.font-weight-bold 
                            i.fa.fa-play
            else if numero == 'question'
                .col-auto
                    .avatar.avatar-sm
                        span.nav-tema-item__icon.avatar-title.font-size-lg.bg-secondary-soft.rounded-circle.text-primary.font-weight-bold 
                            i.fa.fa-question
            else if numero == 'text'
                .col-auto
                    .avatar.avatar-sm
                        span.nav-tema-item__icon.avatar-title.font-size-lg.bg-secondary-soft.rounded-circle.text-primary.font-weight-bold 
                            i.fa.fa-file-text-o
            else if numero == 'glosario'
                .col-auto
                    .avatar.avatar-sm
                        span.nav-tema-item__icon.avatar-title.font-size-lg.bg-secondary-soft.rounded-circle.text-primary.font-weight-bold 
                            i.fa.fa-sort-alpha-asc
            else if numero == 'complementario'
                .col-auto
                    .avatar.avatar-sm
                        span.nav-tema-item__icon.avatar-title.font-size-lg.bg-secondary-soft.rounded-circle.text-primary.font-weight-bold 
                            i.fa.fa-folder-open
            else if numero == 'referencias'
                .col-auto
                    .avatar.avatar-sm
                        span.nav-tema-item__icon.avatar-title.font-size-lg.bg-secondary-soft.rounded-circle.text-primary.font-weight-bold 
                            i.fa.fa-book
            else
                .col-auto
                    .avatar.avatar-sm
                        span.nav-tema-item__icon.avatar-title.font-size-lg.bg-secondary-soft.rounded-circle.text-primary.font-weight-bold= numero

            .col.ml-n2
                span.nav-tema-item__titulo 
                    a(href= ruta)= titulo
            .col-auto                                            
                a(href= ruta).btn.btn-light.nav-tema-item__btn
                    | Ver más
    
    
